{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@shared/*": ["shared/*"],
      "@helpers/*": ["shared/helpers/*"],
      "@models/*": ["shared/models/*"],
    }
  },
  "exclude": ["node_modules"]
}
